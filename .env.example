# ============================================
# Orafinite Environment Variables
# Copy this file to .env and fill in your values
# ============================================

# ============================================
# PostgreSQL Database
# ============================================
POSTGRES_USER=orafinite_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=orafinite
POSTGRES_PORT=5432

# ============================================
# Redis Cache
# ============================================
REDIS_PORT=6379

# ============================================
# Rust API Server
# ============================================
API_PORT=8080
RUST_LOG=orafinite_api=info,tower_http=info

# ENCRYPTION_KEY is required for encrypting model API keys in the database
# Generate a secure random string (at least 32 characters)
# Example: openssl rand -hex 32
ENCRYPTION_KEY=your_encryption_key_here_at_least_32_chars

# Frontend URL for CORS configuration
FRONTEND_URL=http://localhost:3000

# ============================================
# ML Sidecar
# ============================================
ML_SIDECAR_PORT=50051
ML_LOG_LEVEL=INFO
# Device for LLM Guard models: cpu or cuda
LLM_GUARD_DEVICE=cpu

# ============================================
# Next.js Frontend
# ============================================
FRONTEND_PORT=3000

# Better Auth secret for session encryption
# Generate a secure random string (at least 32 characters)
# Example: openssl rand -hex 32
BETTER_AUTH_SECRET=your_better_auth_secret_here_at_least_32_chars

# Better Auth URL (your frontend public URL)
BETTER_AUTH_URL=http://localhost:3000

# ============================================
# OAuth Providers (Optional)
# ============================================
# GitHub OAuth - https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Google OAuth - https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ============================================
# Passkey Configuration (Optional)
# ============================================
# Relying Party ID (usually your domain without protocol)
PASSKEY_RP_ID=localhost
# Relying Party Name (shown to users)
PASSKEY_RP_NAME=Orafinite
